# AddressIQ Backend Environment Configuration Template
# Copy to .env for local development. Leave blank to disable optional integrations.

# =============================================================================
# Backend Services
# =============================================================================

POSTGRES_USER=addressiq_user
POSTGRES_PASSWORD=addressiq_password
POSTGRES_DB=addressiq_db
DATABASE_URL=postgres://addressiq_user:addressiq_password@db:5432/addressiq_db?sslmode=disable
REDIS_URL=redis://cache:6379
FRONTEND_ORIGIN=http://localhost:3000
PORT=8080

